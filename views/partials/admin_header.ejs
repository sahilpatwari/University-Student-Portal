<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Portal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <link rel="stylesheet" href="/styles/enhanced-styles.css" />
    <style>
      .admin-sidebar {
        background-color: #2c3e50;
      }

      .admin-header h1 {
        color: #2c3e50;
      }

      .admin-card {
        border-left: 4px solid #2c3e50;
      }
    </style>
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar -->
      <aside class="sidebar admin-sidebar">
        <div class="sidebar-header">
          <h3>Admin Portal</h3>
        </div>
        <div class="sidebar-menu">
          <ul>
            <li>
              <a
                href="/add"
                class="<%= (typeof activePage !== 'undefined' && activePage === 'add') ? 'active' : '' %>"
              >
                <i class="bx bx-plus-circle"></i>
                <span>Add</span>
              </a>
            </li>
            <li>
              <a
                href="/update"
                class="<%= (typeof activePage !== 'undefined' && activePage === 'update') ? 'active' : '' %>"
              >
                <i class="bx bx-edit-alt"></i>
                <span>Update</span>
              </a>
            </li>
            <li>
              <a
                href="/delete"
                class="<%= (typeof activePage !== 'undefined' && activePage === 'delete') ? 'active' : '' %>"
              >
                <i class="bx bx-trash"></i>
                <span>Delete</span>
              </a>
            </li>
            <li>
              <a href="/">
                <i class="bx bx-log-out"></i>
                <span>Logout</span>
              </a>
            </li>
          </ul>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <button class="toggle-sidebar">
          <i class="bx bx-menu"></i>
        </button>

        <div class="page-header admin-header">
          <h1>Admin Dashboard</h1>
          <p>Manage system data and configurations</p>
        </div>

        <script>
          document
            .querySelector(".toggle-sidebar")
            .addEventListener("click", function () {
              document.querySelector(".sidebar").classList.toggle("active");
            });
        </script>
      </main>
    </div>
  </body>
</html>
