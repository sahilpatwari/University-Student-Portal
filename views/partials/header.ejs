<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Portal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <link rel="stylesheet" href="/styles/enhanced-styles.css" />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <h3>Student Portal</h3>
        </div>
        <div class="sidebar-menu">
          <ul>
            <li>
              <a
                href="/student_details"
                class="<%= (typeof activePage !== 'undefined' && activePage === 'profile') ? 'active' : '' %>"
              >
                <i class="bx bx-user"></i>
                <span>Profile</span>
              </a>
            </li>
            <li>
              <a
                href="/semester_c"
                class="<%= (typeof activePage !== 'undefined' && activePage === 'courses') ? 'active' : '' %>"
              >
                <i class="bx bx-book-alt"></i>
                <span>Courses</span>
              </a>
            </li>
            <li>
              <a
                href="/semester_g"
                class="<%= (typeof activePage !== 'undefined' && activePage === 'grades') ? 'active' : '' %>"
              >
                <i class="bx bx-bar-chart-alt-2"></i>
                <span>Grades</span>
              </a>
            </li>
            <li>
              <a
                href="/semester_a"
                class="<%= (typeof activePage !== 'undefined' && activePage === 'attendance') ? 'active' : '' %>"
              >
                <i class="bx bx-calendar-check"></i>
                <span>Attendance</span>
              </a>
            </li>
            <li>
              <a href="/">
                <i class="bx bx-log-out"></i>
                <span>Logout</span>
              </a>
            </li>
          </ul>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <button class="toggle-sidebar">
          <i class="bx bx-menu"></i>
        </button>

        <div class="page-header">
          <h1>Hello <%=F_Name%></h1>
        </div>

        <script>
          document
            .querySelector(".toggle-sidebar")
            .addEventListener("click", function () {
              document.querySelector(".sidebar").classList.toggle("active");
            });
        </script>
      </main>
    </div>
  </body>
</html>
