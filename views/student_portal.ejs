<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Portal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <link rel="stylesheet" href="/RDBMS/public/styles/enhanced-styles.css" />
    <style>
      :root {
        --primary-color: #4361ee;
        --secondary-color: #3f37c9;
        --success-color: #4cc9f0;
        --danger-color: #f72585;
        --warning-color: #f8961e;
        --light-color: #f8f9fa;
        --dark-color: #212529;
        --text-color: #333333;
        --bg-color: #ffffff;
        --border-radius: 8px;
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f5f7fb;
        margin: 0;
        padding: 0;
      }

      .dashboard-container {
        display: flex;
        min-height: 100vh;
      }

      /* Sidebar */
      .sidebar {
        width: 250px;
        background-color: var(--dark-color);
        color: white;
        position: fixed;
        height: 100vh;
        transition: var(--transition);
        z-index: 1000;
      }

      .sidebar-header {
        padding: 2rem 1.5rem;
        text-align: center;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .sidebar-header h3 {
        margin: 0;
        font-size: 1.5rem;
        color: var(--success-color);
      }

      .sidebar-menu {
        padding: 1rem 0;
      }

      .sidebar-menu ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .sidebar-menu li {
        margin-bottom: 0.5rem;
      }

      .sidebar-menu a {
        display: flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: var(--transition);
      }

      .sidebar-menu a:hover,
      .sidebar-menu a.active {
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
      }

      .sidebar-menu i {
        margin-right: 1rem;
        font-size: 1.25rem;
      }

      /* Main Content */
      .main-content {
        flex: 1;
        margin-left: 250px;
        padding: 2rem;
        transition: var(--transition);
      }

      .page-header {
        margin-bottom: 2rem;
      }

      .page-header h1 {
        margin: 0;
        font-size: 1.75rem;
        color: var(--dark-color);
      }

      .page-header p {
        margin: 0.5rem 0 0;
        color: #666;
      }

      /* Dashboard Cards */
      .stats-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
      }

      .stats-card {
        background-color: var(--bg-color);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 1.5rem;
        display: flex;
        align-items: center;
      }

      .stats-card i {
        font-size: 2.5rem;
        margin-right: 1rem;
        color: var(--primary-color);
      }

      .stats-card .stats-info h3 {
        margin: 0;
        font-size: 1rem;
        color: #666;
      }

      .stats-card .stats-info p {
        margin: 0.25rem 0 0;
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--dark-color);
      }

      /* Recent Activity */
      .activity-card {
        background-color: var(--bg-color);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .activity-card h2 {
        margin-top: 0;
        margin-bottom: 1.5rem;
        font-size: 1.25rem;
        color: var(--dark-color);
      }

      .activity-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .activity-item {
        display: flex;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #eee;
      }

      .activity-item:last-child {
        border-bottom: none;
      }

      .activity-icon {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: rgba(67, 97, 238, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
      }

      .activity-icon i {
        color: var(--primary-color);
        font-size: 1.25rem;
      }

      .activity-info h3 {
        margin: 0;
        font-size: 1rem;
        font-weight: 500;
        color: var(--dark-color);
      }

      .activity-info p {
        margin: 0.25rem 0 0;
        font-size: 0.875rem;
        color: #666;
      }

      .activity-date {
        margin-left: auto;
        font-size: 0.875rem;
        color: #666;
      }

      /* Upcoming Deadlines */
      .deadlines-card {
        background-color: var(--bg-color);
        border-radius: var(--border-radius);
        box-shadow: var(--shadow);
        padding: 1.5rem;
      }

      .deadlines-card h2 {
        margin-top: 0;
        margin-bottom: 1.5rem;
        font-size: 1.25rem;
        color: var(--dark-color);
      }

      .deadline-item {
        display: flex;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid #eee;
      }

      .deadline-item:last-child {
        border-bottom: none;
      }

      .deadline-info h3 {
        margin: 0;
        font-size: 1rem;
        font-weight: 500;
        color: var(--dark-color);
      }

      .deadline-info p {
        margin: 0.25rem 0 0;
        font-size: 0.875rem;
        color: #666;
      }

      .deadline-date {
        margin-left: auto;
        padding: 0.35rem 0.75rem;
        background-color: rgba(248, 150, 30, 0.1);
        border-radius: 15px;
        font-size: 0.875rem;
        color: var(--warning-color);
      }

      /* Responsive Design */
      @media (max-width: 992px) {
        .sidebar {
          width: 80px;
        }

        .sidebar-header h3 {
          display: none;
        }

        .sidebar-menu a span {
          display: none;
        }

        .sidebar-menu i {
          margin-right: 0;
        }

        .main-content {
          margin-left: 80px;
        }
      }

      @media (max-width: 768px) {
        .stats-container {
          grid-template-columns: 1fr;
        }

        .sidebar {
          width: 0;
          transform: translateX(-100%);
        }

        .main-content {
          margin-left: 0;
        }

        .sidebar.active {
          width: 250px;
          transform: translateX(0);
        }

        .toggle-sidebar {
          display: block;
        }
      }

      /* Toggle Button */
      .toggle-sidebar {
        position: fixed;
        top: 20px;
        left: 20px;
        z-index: 1001;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: none;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        box-shadow: var(--shadow);
      }

      @media (max-width: 768px) {
        .toggle-sidebar {
          display: flex;
        }
      }
    </style>
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <div class="sidebar-header">
          <h3>Student Portal</h3>
        </div>
        <div class="sidebar-menu">
          <ul>
            <li>
              <a href="/student_details" class="active">
                <i class="bx bx-user"></i>
                <span>Profile</span>
              </a>
            </li>
            <li>
              <a href="/semester_c">
                <i class="bx bx-book-alt"></i>
                <span>Courses</span>
              </a>
            </li>
            <li>
              <a href="/semester_g">
                <i class="bx bx-bar-chart-alt-2"></i>
                <span>Grades</span>
              </a>
            </li>
            <li>
              <a href="/semester_a">
                <i class="bx bx-calendar-check"></i>
                <span>Attendance</span>
              </a>
            </li>
            <li>
              <a href="/">
                <i class="bx bx-log-out"></i>
                <span>Logout</span>
              </a>
            </li>
          </ul>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <button class="toggle-sidebar">
          <i class="bx bx-menu"></i>
        </button>

        <div class="page-header">
          <h1>Welcome, <%= F_Name %></h1>
          <p>Here's what's happening with your academic progress</p>
        </div>

        <!-- Dashboard Stats -->
        <div class="stats-container">
          <div class="stats-card">
            <i class="bx bx-book-bookmark"></i>
            <div class="stats-info">
              <h3>Courses Enrolled</h3>
              <p>5</p>
            </div>
          </div>
          <div class="stats-card">
            <i class="bx bx-bar-chart-alt"></i>
            <div class="stats-info">
              <h3>Current CGPA</h3>
              <p>3.75</p>
            </div>
          </div>
          <div class="stats-card">
            <i class="bx bx-calendar-check"></i>
            <div class="stats-info">
              <h3>Attendance</h3>
              <p>85%</p>
            </div>
          </div>
          <div class="stats-card">
            <i class="bx bx-time"></i>
            <div class="stats-info">
              <h3>Semester Progress</h3>
              <p>65%</p>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="activity-card">
          <h2>Recent Activity</h2>
          <ul class="activity-list">
            <li class="activity-item">
              <div class="activity-icon">
                <i class="bx bx-file"></i>
              </div>
              <div class="activity-info">
                <h3>Programming Assignment Submitted</h3>
                <p>Data Structures and Algorithms</p>
              </div>
              <div class="activity-date">2 days ago</div>
            </li>
            <li class="activity-item">
              <div class="activity-icon">
                <i class="bx bx-notepad"></i>
              </div>
              <div class="activity-info">
                <h3>Quiz Completed</h3>
                <p>Database Management System</p>
              </div>
              <div class="activity-date">3 days ago</div>
            </li>
            <li class="activity-item">
              <div class="activity-icon">
                <i class="bx bx-star"></i>
              </div>
              <div class="activity-info">
                <h3>New Grade Posted</h3>
                <p>Engineering Physics: A</p>
              </div>
              <div class="activity-date">1 week ago</div>
            </li>
          </ul>
        </div>

        <!-- Upcoming Deadlines -->
        <div class="deadlines-card">
          <h2>Upcoming Deadlines</h2>
          <div class="deadline-item">
            <div class="deadline-info">
              <h3>Project Submission</h3>
              <p>Modern C++ Programming</p>
            </div>
            <div class="deadline-date">2 days left</div>
          </div>
          <div class="deadline-item">
            <div class="deadline-info">
              <h3>Mid-term Exam</h3>
              <p>Data Structures and Algorithms</p>
            </div>
            <div class="deadline-date">1 week left</div>
          </div>
          <div class="deadline-item">
            <div class="deadline-info">
              <h3>Lab Report Submission</h3>
              <p>Engineering Chemistry</p>
            </div>
            <div class="deadline-date">2 weeks left</div>
          </div>
        </div>
      </main>
    </div>

    <script>
      document
        .querySelector(".toggle-sidebar")
        .addEventListener("click", function () {
          document.querySelector(".sidebar").classList.toggle("active");
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
